generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  USER
  ADMIN
  DRIVER
  RESTAURANT_OWNER
}

model User {
  id              String  @id @default(uuid())
  email           String  @unique
  name            String
  passwordHash    String  @map("password_hash")
  role            Role    @default(USER)
  isEmailVerified Boolean @default(false) @map("is_email_verified")

  profilePicture String? @map("profile_picture")
  bio            String?
  phone          String?

  twoFactorEnabled Boolean @default(false) @map("two_factor_enabled")
  twoFactorSecret  String? @map("two_factor_secret")

  twoFactorPendingSecret  String?   @map("two_factor_pending_secret")
  twoFactorSetupExpiresAt DateTime? @map("two_factor_setup_expires_at")
  twoFactorBackupCodes    String[]  @map("two_factor_backup_codes")
  twoFactorFailedAttempts Int       @default(0) @map("two_factor_failed_attempts")
  twoFactorLockedUntil    DateTime? @map("two_factor_locked_until")

  tokenVersion Int @default(0) @map("token_version")

  resetPasswordToken           String?   @map("reset_password_token")
  resetPasswordExpires         DateTime? @map("reset_password_expires")
  resetPasswordAttempts        Int       @default(0) @map("reset_password_attempts")
  resetPasswordAttemptsResetAt DateTime? @map("reset_password_attempts_reset_at")

  failedLoginAttempts Int       @default(0) @map("failed_login_attempts")
  lockedUntil         DateTime? @map("locked_until")

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  registrationHistory     RegistrationHistory?
  loginHistory            LoginHistory[]
  driverProfile           DriverProfile?
  restaurantProfile       RestaurantProfile?
  emailVerificationTokens EmailVerificationToken[]

  @@map("users")
}

model DriverProfile {
  id            String  @id @default(uuid())
  userId        String  @unique @map("user_id")
  user          User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  licenseNumber String? @map("license_number")
  vehicleType   String? @map("vehicle_type")
  isVerified    Boolean @default(false) @map("is_verified")

  @@map("driver_profiles")
}

model RestaurantProfile {
  id             String  @id @default(uuid())
  userId         String  @unique @map("user_id")
  user           User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  restaurantName String  @map("restaurant_name")
  address        String?
  isVerified     Boolean @default(false) @map("is_verified")

  @@map("restaurant_profiles")
}

model EmailVerificationToken {
  id        String   @id @default(uuid())
  token     String   @unique
  userId    String   @map("user_id")
  email     String
  expiresAt DateTime @map("expires_at")
  used      Boolean  @default(false)
  createdAt DateTime @default(now()) @map("created_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@map("email_verification_token")
}

model RegistrationHistory {
  id        String  @id @default(uuid())
  userId    String  @unique @map("user_id")
  user      User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  ipAddress String? @map("ip_address")
  userAgent String? @map("user_agent")
  device    String?
  os        String?
  browser   String?
  country   String?
  city      String?

  registeredAt DateTime @default(now()) @map("registered_at")

  @@map("registration_history")
}

model LoginHistory {
  id        String  @id @default(uuid())
  userId    String  @map("user_id")
  user      User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  ipAddress String? @map("ip_address")
  userAgent String? @map("user_agent")
  device    String?
  os        String?
  browser   String?
  country   String?
  city      String?

  loginTime DateTime @default(now()) @map("login_time")

  @@map("login_history")
}

model TokenBlacklist {
  id        String   @id @default(uuid())
  jti       String   @unique
  expiresAt DateTime @map("expires_at")

  createdAt DateTime @default(now()) @map("created_at")

  @@index([expiresAt])
  @@map("token_blacklist")
}
